<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>
<body>
    <form action="/login" method="post">
        <div>
            <label for="name">Username</label>
            <input class="form-group" type="text" name="name" placeholder="Username" required>
        </div>
        <div>
            <label for="password">Password</label>
            <input  class="form-group" type="password" name="password" placeholder="Password" required>
        </div>
        <input type="submit" value="Login">
        <div>
            <label for="regist">You Haven't Account?</label>
            <div><a name="regist" href="/render-reg">Register</a></div>
        </div>
        {{#if isUsers}}
            {{#each users}}
                <strong> Hi {{this.name}}, We happy to hear you!</strong>
        {{/each}}
            {{else}}
                <strong>Something wrong!</strong>
        {{/if}}
        <div><a href="/" >Go to the home page</a></div>
    </form>

</body>
</html>
