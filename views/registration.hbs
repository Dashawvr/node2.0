<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>

<form action="/reg" method="post">
    <div>
        <label for="name">Username</label>
        <input class="form-group" type="text" name="name" placeholder="Username">
    </div>
    <div>
        <label for="email">Email</label>
        <input class="form-group" type="email" name="email" placeholder="Email">
    </div>
    <div>
        <label for="password">Password</label>
        <input  class="form-group" type="password" name="password" placeholder="Password">
    </div>
    <div>
        <label for="rePass">Re-Enter Pass</label>
        <input class="form-group" type="password" name="rePass" placeholder="Password">
    </div>
    <input type="submit" value="Register">
</form>

</body>
</html>
